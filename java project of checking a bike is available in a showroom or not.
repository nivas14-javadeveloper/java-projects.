import java.util.Scanner;
class A 
{
    String modelname;
    int modelNumber;
    String color;
    int CC;
    int mileage;
    int maxSpeed;
    int Price;
    String Display;
    String emi;
    A(String modelname,int modelNumber,String color,int CC,int mileage,int maxSpeed,String Display,String emi)
    {
        this.modelname=modelname;
        this.modelNumber=modelNumber;
        this.color=color;
        this.CC=CC;
        this.mileage=mileage;
        this.maxSpeed=maxSpeed;
        this.Display=Display;
        this.emi=emi;
    }
}
class B 
{
    void display(A arg)
    {
        System.out.println("ModelName="+arg.modelname);
        System.out.println("ModelNumber="+arg.modelNumber);
        System.out.println("Available in"+" "+arg.color+" "+"colors");
        System.out.println("CC="+arg.CC+"cc");
        System.out.println("Mileage="+arg.mileage+"Kilometers");
        System.out.println("MaxSpeed="+arg.maxSpeed+"KmpH");
        System.out.println("Display="+arg.Display);
        System.out.println("EMI="+arg.emi);
    }
}
